<h1>Eat-Da-Burger!</h1>
<div id="menu">
  <div id="left">
    <h2>Uneaten Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <br><button>Devour!</button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  
  <div id="right">
    <h2>Eaten Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div>
  <label>Add a burger to the menu</label><br>
  <input type="text">
  <button id="submit">Submit</button>
</div>

