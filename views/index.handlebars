<h1>Eat-Da-Burger!</h1>

<h2>Uneaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <br><button>Devour!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>
  
 <ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<div>
  <label>Add a burger to the menu</label><br>
  <input type="text">
  <button id="submit">Submit</button>
</div>

{{!-- Putting script here as it's easier to test --}}
<script>
  document.querySelectorAll("button").forEach(x =>{
    if(x.id !== "submit"){
      x.addEventListener("click",()=>{
        const burgerName = x.parentElement.innerText.slice(0,-x.innerText.length);
        console.log(burgerName);

      });
    }else{
      x.addEventListener("click",()=>{
        const burgerName = document.querySelector("input").value.trim();
        console.log(burgerName);
      });
    }
    
  });
  
</script>